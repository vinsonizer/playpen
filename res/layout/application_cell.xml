<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/grid_app_icon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/grid_app_icon_desc" android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/grid_app_label"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textIsSelectable="false" android:background="@android:color/background_light"/>

</LinearLayout>

